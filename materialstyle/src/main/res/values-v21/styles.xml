<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--ActionBar 中菜单的样式-->
        <item name="actionMenuTextAppearance">@style/MenuTextAppearance</item>
        <!--界面主色 ActionBar的背景色-->
        <item name="colorPrimary">@color/colorPrimary_Purple</item>
        <!--状态栏的颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Purple</item>
        <!--colorAccent是设置像是CheckBox的颜色-->
        <item name="colorAccent">@color/colorAccent_Purple</item>
        <!--整体背景颜色-->
        <item name="android:windowBackground">@color/windowBackground_Purple</item>
        <!--ActionBar Title的颜色-->
        <item name="titleTextColor">@color/title_text_light</item>
        <!--Action中menu的字体颜色-->
        <item name="actionMenuTextColor">@color/title_text_light</item>
        <!--允许使用切换动画-->
        <item name="android:windowContentTransitions">true</item>
        <!-- 指定进入和退出transitions -->
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>
        <!-- 指定shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">@transition/change_image_transform
        </item>
        <item name="android:windowSharedElementExitTransition">@transition/change_image_transform
        </item>
    </style>
</resources>